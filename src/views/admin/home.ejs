<div class="container text-center mt-5">
  <table class="table" width="50%">
    <tr>
      <th class="tableheading">Name</th>
      <th class="tableheading">Email</th>
      <th class="tableheading">Phone.no</th>
    </tr>
    <%if(students.length>0){
      for(let i=0;i<students.length;i++){
      %>
    <tr>
      <td><%=students[i].name %></td>
      <td><%=students[i].email %></td>
      <td><%=students[i].phoneNumber %></td>
      <td><button class="btn btn-primary btn-sm"><a href="/admin/update_user?id=<%=students[i]._id%>"id="buttonadmin">Edit</a></button>
        <button class="btn btn-danger btn-sm ms-3"><a href="/admin/delete_user?id=<%=students[i]._id%>"id="buttonadmin">Delete</a></button>
      </td>
    </tr>
    <%} }
    else{%>
     <td colspan="5">Data not found</td>
    <%}%>
  </table>
</div>

